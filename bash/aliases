#finder
alias o='open . &'
alias sf='open -a Safari'

#top
alias tu='top -o cpu' # top sorted by cpu
alias tm='top -o vsize' # top sorted by memory

#git
alias gs='git status -sb'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gd='git diff'
alias gco='git checkout'
alias gcob='git checkout -b'

#common
alias m="mate" # textmate, all that is holy, the blessed bread, panagia.
alias ifc='ifconfig -L en1' # help me find my ip address
alias l="ls -lhGt"
alias ..="cd .."
alias h="history"
alias hf="history|awk '{a[$2]++ } END{for(i in a){print a[i] \" \" i}}'|sort -rn|head -n 10"
function take {
  mkdir $1
  cd $1
}
# pretty print code, from http://gist.github.com/23914
function pless {
  pygmentize $1 | less -r
}
